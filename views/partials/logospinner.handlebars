
		<script src="javascript/three.js"></script>
		<script>
const scene = new THREE.Scene();
const camera = new THREE.PerspectiveCamera( 1000, window.innerWidth / window.innerHeight, 10, 1000 );

const renderer = new THREE.WebGLRenderer({alpha:true});
renderer.setSize( window.innerWidth,window.innerHeight );
document.body.appendChild( renderer.domElement );

const light = new THREE.DirectionalLight( 0xFDCA40, 1 );
light.position.set( 120, 60, 50 );
const geometry = new THREE.IcosahedronGeometry( 100,0);
const material = new THREE.MeshPhongMaterial( { color: 0xffff00 } );
const cube = new THREE.Mesh( geometry, material );
scene.add( cube, light );

cube.rotation.x -= 0.81;
camera.position.z = 200;

function animate() {
    requestAnimationFrame( animate );
    cube.rotation.y += 0.01;

    renderer.render( scene, camera );
};

animate();
		</script>