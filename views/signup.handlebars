<section class="sign-up-page">
    <div class="form-heading">
        <h1>Sign Up</h1>
    </div>
    <div class="form-section">
        <form class="signup-form" id="signup-form">
                <label for="username-signup">Select a Username</label>
                <input type="text" class="add class" id="username-signup" placeholder="Username Here!" />
                <label for="email-signup">Enter your email</label>
                <input type="text" class="add class" id="email-signup" placeholder="Email Here!" />
                <label for="password-signup">Select a password</label>
                <input type="password" class="add class" id="password-signup" placeholder="Password Here!" />
                <button type="submit" class="add class">Sign Up!</button>
        </form>
    </div>

    <a href="/login" class="login-link">log in instead</a>
</section>

<script src="/javascript/signup.js"></script>